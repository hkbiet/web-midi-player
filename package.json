{
    "name": "web-midi-player",
    "name-display": "Web Midi Player",
    "description": "ðŸŽ¹ Event-driven JavaScript library to enable MIDI playback in the browser.",
    "version": "1.1.2",
    "author": {
        "name": "Yves Gurcan",
        "url": "http://yvesgurcan.com/"
    },
    "license": "MIT",
    "keywords": [
        "midi",
        "midi player",
        "media player",
        "web",
        "web-assembly",
        "libtimidity",
        "open-eugene",
        "open source",
        "audio"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/yvesgurcan/web-midi-player"
    },
    "directories": {
        "doc": "./doc",
        "example": "./example",
        "test": "./test"
    },
    "homepage": "https://midi.yvesgurcan.com",
    "bugs": {
        "url": "https://github.com/yvesgurcan/web-midi-player/issues"
    },
    "scripts": {
        "start": "webpack-dev-server --mode production --progress",
        "build": "webpack --mode production --progress",
        "build:quiet": "webpack --mode production",
        "commit:build": "git add . && git commit -m 'new build' && git push",
        "lint": "prettier --write **/*.js",
        "lint:check": "prettier --check **/*.js",
        "test": "jest",
        "test:init": "jest --init",
        "docs": "documentation build src/MidiPlayer.js -f html -o doc --config documentation.yml",
        "docs:watch": "documentation serve --watch src/MidiPlayer.js --config documentation.yml",
        "preversion": "npm run lint && npm run test && npm run build && cd ./example && npm run build",
        "postversion": "npm run docs && npm run commit:build",
        "upgrade:patch": "npm version patch",
        "upgrade:minor": "npm version minor",
        "upgrade:major": "npm version major",
        "upgrade:releases": "git push --tags"
    },
    "devDependencies": {
        "@babel/core": "^7.3.4",
        "@babel/plugin-proposal-class-properties": "^7.3.4",
        "@babel/plugin-transform-arrow-functions": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.3.4",
        "@babel/preset-env": "^7.3.4",
        "@babel/register": "^7.7.4",
        "@babel/runtime": "^7.3.4",
        "babel-loader": "^8.0.5",
        "clean-webpack-plugin": "^3.0.0",
        "documentation": "^12.1.4",
        "file-loader": "^5.0.2",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.9.0",
        "net": "^1.0.2",
        "prettier": "^1.16.4",
        "tls": "0.0.1",
        "uuid": "^3.3.3",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3",
        "webpack-dev-server": "^3.2.1"
    },
    "jest": {
        "globals": {
            "NODE_ENV": "test"
        }
    }
}
